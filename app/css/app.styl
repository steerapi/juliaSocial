@import helpers

@font-face
  font-family: 'Droid Sans Mono'
  font-style: normal
  font-weight: normal
  src: local('Droid Sans Mono'), local('DroidSansMono'), url('http://themes.googleusercontent.com/static/fonts/droidsansmono/v3/ns-m2xQYezAtqh7ai59hJaH0X__W3S3MJL29bc5CWfs.woff') format('woff')

*
  margin: 0px
  padding: 0px

body
  font: 100% 'Arial', sans-serif
  color: #666
  background-color: #eee

div#left-column
  width: 15%
  float: left
  font-size: 90%
  padding-left: 20px
  padding-right: 20px
  border-right: 1px solid #d9d9d9

div#left-column a
  display: block
  padding: 5px
  padding-left: 20px
  text-decoration: none
  color: #666
  font-size: 100%

div#left-column a.current-page
  font-weight: bold

div#left-column a:hover
  background-color: #f6f6f6

div#right-column
  float: left
  width: 66.74%

div#chat-column
  position: absolute
  right: 0px
  top: 0px
  width: 15%
  font-size: 90%
  h1
    text-align: center

div#people-list
  height: 290px
  overflow: auto
  
div#people-head
  text-align: center
  padding-bottom: 10px
  
div#chat-column a
  display: block
  padding: 5px
  padding-left: 20px
  text-decoration: none
  color: #666
  font-size: 100%

div#chat-column a.current-page
  font-weight: bold

div#chat-column a:hover
  background-color: #f6f6f6

img.bullet
  padding-bottom: 3px
  padding-right: 6px

ul
  list-style-type: none
  line-height: 1.3

h1
  font-size: 130%
  font-weight: bold
  margin-top: 20px
  margin-bottom: 10px
  text-shadow: 1px 1px 1px #fff
  color: #666

h2
  font-size: 110%
  font-weight: bold
  margin-top: 20px
  margin-bottom: 10px
  text-shadow: 1px 1px 1px #fff
  color: #999

p
  margin-top: 10px
  margin-bottom: 10px

code
  font: 85% "Droid Sans Mono", "Consolas", "Courier", "Courier New", monospace
  background-color: #f6f6f6

form#terminal-form
  border-left: 1px solid #d9d9d9
  padding: 20px
  overflow: auto
  cursor: text
  -moz-box-shadow: 0px 0px 20px #ddd
  -webkit-box-shadow: 0px 0px 20px #ddd
  box-shadow: 0px 0px 20px #ddd

div#pad
  position: relative
  border: none
  outline: none
  display: block
  overflow-x: hidden
  font: 85% "Droid Sans Mono", "Consolas", "Courier", "Courier New", monospace
  color: #444444
  border-right: 1px solid #d9d9d9
  background-color: #f8f8f8
  overflow: auto
  cursor: text
  -moz-box-shadow: 0px 0px 20px #ddd
  -webkit-box-shadow: 0px 0px 20px #ddd
  box-shadow: 0px 0px 20px #ddd
  
div#terminal-console
  position: relative
  border: none
  outline: none
  display: block
  overflow-x: hidden
  font: 85% "Droid Sans Mono", "Consolas", "Courier", "Courier New", monospace
  color: #444444
  border-right: 1px solid #d9d9d9
  padding: 20px
  background-color: #f8f8f8
  overflow: auto
  cursor: text
  -moz-box-shadow: 0px 0px 20px #ddd
  -webkit-box-shadow: 0px 0px 20px #ddd
  box-shadow: 0px 0px 20px #ddd
  
div#terminal
  border: none
  outline: none
  display: block
  overflow-x: hidden
  font: 85% "Droid Sans Mono", "Consolas", "Courier", "Courier New", monospace

div#prompt
  float: left
  font: 85% "Droid Sans Mono", "Consolas", "Courier", "Courier New", monospace
  display: none

textarea#terminal-input
  width: 500px
  background-color: transparent
  border: none
  outline: none
  display: block
  font: 85% "Droid Sans Mono", "Consolas", "Courier", "Courier New", monospace
  resize: none
  overflow: hidden

div.float-clear
  clear: left

span.strong
  font-weight: bold

span.color-scheme-message

span.color-scheme-error

span.color-scheme-prompt

select#color-scheme-picker
  width: 189px

svg .hrule line, svg .vrule line
  shape-rendering: crispEdges

svg .hrule2 line, svg .vrule2 line
  shape-rendering: crispEdges

svg .line
  fill: none
  stroke-width: 1.5px

svg text

a img
  border: none

.hidden
  display: none

#tool-bar button
  left: 0px

